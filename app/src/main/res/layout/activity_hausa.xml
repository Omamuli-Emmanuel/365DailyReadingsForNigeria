<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#212F3D"
    tools:context=".hausa">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:background="#fff"
                app:cardCornerRadius="8dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="30dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="365 Hausa Language"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:layout_marginBottom="15dp"
                        />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/hauas"
                            android:layout_gravity="center"
                            android:layout_marginBottom="30dp"
                            />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:id="@+id/hausaRead"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/read"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:text="Littafi Karatu"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#D5D5D4"
                        android:layout_height="2dp" />


                    <LinearLayout
                        android:id="@+id/hausaPray"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="15dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/pray"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:text="Addu'o'in Coci"
                            />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#D5D5D4"
                        android:layout_height="2dp" />




                </LinearLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>